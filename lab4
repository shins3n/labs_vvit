from paket import numbers
from paket import stroki
print(f'Получившееся число: {numbers.slogenie_num(int(input()),int(input()))}, Текст:{stroki.perevorachivaet_stroki(input())}')
#my_module
def slogenie_num(a,b):
    return a+b
def ymnogenie(a,b):
    return a*b
def vichitanie_num(a,b):
    return a-b
def delenie_num(a,b):
    if b == 0:
        return 'На ноль нельзя'
    return a/b
